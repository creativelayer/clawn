#!/bin/bash
# Pre-push hook: Runs build check before allowing push
# Install with: git config core.hooksPath .githooks

echo "ü§° Running pre-push build check..."
./scripts/check-build.sh

if [ $? -ne 0 ]; then
    echo ""
    echo "‚ùå Build failed! Fix errors before pushing."
    exit 1
fi

echo ""
echo "‚úÖ Pre-push check passed!"
